<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Plan" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="fontFamily">@font/myfont</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/myfont</item>
    </style>


    <!-- Toast style -->
    <style name="errorToast">
        <item name="stColorBackground">#FF4747</item>
        <item name="stTextColor">#fff</item>
        <item name="stFont">@font/myfont</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stTextSize">14sp</item>
        <item name="stIconStart">@drawable/ic_error</item>
        <item name="stRadius">10dp</item>
    </style>

    <style name="successToast">
        <item name="stColorBackground">#50D855</item>
        <item name="stTextColor">#fff</item>
        <item name="stFont">@font/myfont</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stTextSize">14sp</item>
        <item name="stIconStart">@drawable/ic_check</item>
        <item name="stRadius">10dp</item>
    </style>

    <style name="Theme.Plan.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Plan.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Plan.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>